{
  "name": "HTML 转 JPG",
  "type": "http",
  "description": "将 HTML 内容转为 JPG 并返回 Base64",
  "request": {
    "method": "POST",
    "url": "https://your-vercel-app.vercel.app/api/capture",
    "headers": {
      "Content-Type": "application/json"
    },
    "body": {
      "html": "{{html}}"
    }
  },
  "inputs": [
    {
      "key": "html",
      "type": "string",
      "label": "HTML 内容",
      "required": true
    }
  ],
  "outputs": [
    {
      "key": "imageBase64",
      "type": "string",
      "label": "Base64 JPG 图像"
    }
  ]
}